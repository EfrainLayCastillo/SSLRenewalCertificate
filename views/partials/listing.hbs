{{#each servers}}
  <div class="grid-item col-md-12 my-2">
    <div class="row">
      <div class="col-md-1">
        {{@index}}
      </div>
      <div class="col-md-4">
        <a href="https://{{{this.domain}}}" target="_blank">{{this.domain}}</a>
      </div>
      <div class="col-md-3">
        <span class="days">{{this.daysRemaining}}</span> {{#unless this.error}}d√≠as restantes <i class="fas fa-circle {{warning this.daysRemaining}}"></i> {{else}} Error en el servidor <i class="fas fa-circle red"></i>{{/unless}}
      </div>
      <div class="col-md-3">
        {{#unless this.error}}
          {{this.validTo}}
        {{else}}
          {{this.error}}
        {{/unless}}
      </div>
      <div class="col-md-1">
        <button type="button" data-toggle="modal" data-target="#staticBackdrop-{{@index}}" class="btn btn-primary btn-sm {{renewalActive this.daysRemaining}}"{{disable this.daysRemaining}}>Renew</button>
      </div>
    </div>
  </div>
  <!-- Modal -->
<div class="modal fade" id="staticBackdrop-{{@index}}" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Form to execute Script Injection in to the server</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col">
              <input name="username" type="text" class="form-control" placeholder="User">
            </div>
            <div class="col">
              <input name="publicIP" type="text" class="form-control" value="{{this.publicIP}}" placeholder="{{this.publicIP}}">
              <input type="hidden" name="domain" value="{{this.domain}}">
            </div>
            <div class="col">
              <button type="submit" class="btn btn-primary">Execute</button>
            </div>
            <div class="col-md-12">
              <div id="result">

              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{{/each}}